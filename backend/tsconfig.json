{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "outDir": "./dist",
    "types": ["jest", "node"],
    "plugins": [{ "transform": "ts-transformer-json-schema/transformer" }]
  },
  "exclude": ["node_modules", "test"]
}
